import sys
import tty
import termios
import os

# ì¥ë©´ í…ìŠ¤íŠ¸
scene_texts = [
    "ğŸŒŸ ë‚˜ì˜ ê¿ˆ",
    "ã…“ã„´ì˜¤ë§Œì˜´ã…ë†”\n ã…ã…‡ã…ã…‡ã…ã…‡ã…",
    "ğŸ¨ ê·¸ë¦¼ì„ ê·¸ë¦¬ëŠ” ë‚˜",
    "ğŸš´ ìì „ê±° íƒ€ê¸°",
    "ğŸ¤ ë°œí‘œ ì—°ìŠµ",
    "ğŸ ë! ìˆ˜ê³ í–ˆì–´ìš”"
]

current_scene = 0
total_scenes = len(scene_texts)

def clear():
    os.system('clear' if os.name == 'posix' else 'cls')

def get_key():
    fd = sys.stdin.fileno()
    old = termios.tcgetattr(fd)
    try:
        tty.setraw(sys.stdin.fileno())
        ch1 = sys.stdin.read(1)
        if ch1 == '\x1b':  # ë°©í–¥í‚¤ëŠ” 3ê¸€ì (\x1b[A)
            ch2 = sys.stdin.read(1)
            ch3 = sys.stdin.read(1)
            return ch1 + ch2 + ch3
        else:
            return ch1
    finally:
        termios.tcsetattr(fd, termios.TCSADRAIN, old)

# ì²« í™”ë©´ ì¶œë ¥
clear()
print(scene_texts[current_scene])
print("\nâ† ì˜¤ë¥¸ìª½(â–¶) / ì™¼ìª½(â—€)  q ëˆ„ë¥´ë©´ ì¢…ë£Œ")

while True:
    key = get_key()

    if key == '\x1b[C':  # â†’ ë°©í–¥í‚¤
        if current_scene < total_scenes - 1:
            current_scene += 1
    elif key == '\x1b[D':  # â† ë°©í–¥í‚¤
        if current_scene > 0:
            current_scene -= 1
    elif key.lower() == 'q':
        break

    clear()
    print(scene_texts[current_scene])
    print("\nâ† ì˜¤ë¥¸ìª½(â–¶) / ì™¼ìª½(â—€) í™”ì‚´í‘œë¡œ ì¥ë©´ ì´ë™, q ëˆ„ë¥´ë©´ ì¢…ë£Œ")
